/* components/postcontrol/postcontrol.wxss */
.post-control{
  display: flex;
  align-items: center;
  background: #fff;
  height: 100%;
}
.control-item{
  flex: 1;
  padding-top: 10rpx;
  text-align: center;
  color: #000;
  font-size: 26rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.control-item text {
  font-weight: bold;
}

.send-comment-btn{
  background-color: #FFE431;
  color: #fff;
  margin: 22rpx;
  font-size: 22rpx;
  padding: 10rpx 22rpx;
  border-radius: 14rpx;
  width: 150rpx;
  float: right;
}

.comment-content{
  height: 360rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  padding: 22rpx;
  text-align: left;
}
.share-btn{
  font-size: 26rpx;
  background-color: #fff;
  color: #000;
  padding: 0;
  height: 60rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
}