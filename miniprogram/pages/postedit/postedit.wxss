/* pages/postedit/postedit.wxss */
.post-container{
  padding: 22rpx;
}
.content{
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.footer{
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 22rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #f1f1f1;
}
.words-num{
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}
.send-btn{
  background-color: #FFE431;
  color: #fff;
  font-size: 24rpx;
  margin-right: 22rpx;
  border-radius: 14rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 22rpx;
}
.image-wrap{
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}
.image{
  width: 100%;
  height: 100%;
}
.icon-shanchu-{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  opacity: 0.4;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

.selectphoto{
    border: 1px solid #000;
}