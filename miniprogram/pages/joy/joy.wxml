<swiper indicator-dots="true" autoplay="true">
  <block  wx:for="{{swiperImgUrls}}" wx:key="url">
    <swiper-item>
      <image src="{{item.url}}" mode="widthFix" class="swiper-item-img"></image>
    </swiper-item>
  </block>
</swiper>

<view class="playlist-container">
  <block wx:for="{{playlist}}" wx:key="_id">
    <yl-playlist playlist="{{item}}"></yl-playlist>
  </block>
</view>
