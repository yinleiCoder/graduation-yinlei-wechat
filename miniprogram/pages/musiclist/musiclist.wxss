/* pages/musiclist/musiclist.wxss */
.detail-container{
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}
.detail-mask{
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
.detail-info{
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.detail-img{
  width: 280rpx;
  height: 280rpx;
  padding-right: 24rpx;
  border-radius: 14rpx;
}
.detail {
  flex-grow: 1;
  line-height: 60rpx;
}
.detail view {
  color: #fff;
  font-size: 22rpx;
}
.detail .detail-nm {
  font-size: 36rpx;
  font-weight: 400;
}