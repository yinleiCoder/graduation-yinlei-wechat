/* pages/aboutyinlei/aboutyinlei.wxss */
page {
  background-color: #F7E889;
}
.author-img{
  margin: 22rpx;
}
.yinlei {
  object-fit: cover;
  border-radius: 14rpx;
  display: block;
  position: relative;
  width: 100%;
  height: 500rpx;
}
.title-contianer{
  background-color: tomato;
  position: relative;
  margin: 50rpx 100rpx;
  text-align: center;
  height: 300rpx;
}
.title-contianer view:nth-child(1) {
  width: 100%;
  height: 100%;
  background-color: #A9E0FF;
  position: absolute;
  z-index: 2;
  left: -20rpx;
  top: -20rpx;
}
.title-contianer view:nth-child(2) {
  width: 100%;
  height: 100%;
  background-color: #B7FFBF;
  position: absolute;
  z-index: 4;
  left: 0;
  top: 0;
}

.title-contianer view:nth-child(3) {
  width: 100%;
  height: 100%;
  background-color: #9D7597;
  position: absolute;
  z-index: 6;
  left: 20rpx;
  top: 20rpx;
}
.title-contianer view:nth-child(4) {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: absolute;
  z-index: 6;
  left: 40rpx;
  top: 40rpx;
  border-top-left-radius: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title-contianer view:nth-child(4) > text {
  font-size: 38rpx;
  font-weight: bold;
}

.basic-info{
  margin: 80rpx;
  position: relative;
  padding: 22rpx;
  font-size: 25rpx;
  line-height: 2;
  letter-spacing: 0.5em;
}
.basic-info::before {
  content: '';
  display: block;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 0;
  top: 0;
  border-top: 5rpx solid #000;
  border-left: 5rpx solid #000;
}

.basic-info::after {
  content: '';
  display: block;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  border-right: 5rpx solid #000;
  border-bottom: 5rpx solid #000;
}
.strong {
  font-weight: bold;
}
.end{
  font-size: 25rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.end text {
  border-bottom: 1px solid tomato;
}